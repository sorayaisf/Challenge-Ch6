    <!-- page 1 -->

    <div class="container-fluid jumbotron1">
        <div class="container text-center">
            <h1 class="judul-utama">play traditional game</h1><br>
            <h3 class="sub-judul">Experience new traditional game</h3><br>
            <a href="/login">
                <button type="button" class="btn btn-warning btn-lg fw-bold" href="/login">
                    PLAY NOW
                </button>
            </a>
        </div>
        <div class="container ToggleButton d-flex justify-content-center flex-column align-items-center">
            <span class="mb-2">THE STORY</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-down"
